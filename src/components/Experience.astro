---
import ExperienceItem from "./ExperienceItem.astro";
import Briefcase from "../icons/Briefcase.astro";
const EXPERIENCE_ITEMS = [
    {
        title: "Practicante del área de TI",
        description: "Practicante del área de TI de la empresa IFCET.",
        date: "Desde 2022 hasta 2024",
    },
    {
        title: "Desarrollador Web Full Stack FreeLance",
        description: "6 meses de experiencia en desarrollo web Full Stack.",
        date: "Desde Enero de 2025 hasta la actualidad",
    },
    
]
---
<div class="flex flex-col items-center">
<h2 class="text-white text-2xl font-bold mb-6 flex items-center gap-x-2">
    <Briefcase class="size-6" />
    Experiencia Laboral
  </h2>
<ol class="items-center sm:flex lg:">
    {EXPERIENCE_ITEMS.map((item) => (
        <li class="relative mb-6 sm:mb-0 text-pretty">
            <ExperienceItem {...item} />
        </li>
    ))}
</ol>
</div>

